---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const poems = (await getCollection('poems'))
  .filter(poem => !poem.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Poems" description="A collection of my poems.">
  <h1>Poems</h1>
  <p>Emotions captured in verse.</p>

  {poems.length > 0 ? (
    <ul class="post-list">
      {poems.map((poem) => (
        <li class="post-item">
          <h3><a href={`/poems/${poem.slug}`}>{poem.data.title}</a></h3>
          <p class="post-meta">
            {poem.data.date.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </p>
          {poem.data.description && (
            <p class="post-excerpt">{poem.data.description}</p>
          )}
        </li>
      ))}
    </ul>
  ) : (
    <p class="empty-state">No poems yet. Check back soon!</p>
  )}
</BaseLayout>

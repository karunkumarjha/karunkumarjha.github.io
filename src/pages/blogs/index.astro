---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const blogs = (await getCollection('blogs'))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

<BaseLayout title="Blogs" description="Read my latest blog posts on various topics.">
  <h1>Blogs</h1>
  <p>Thoughts, ideas, and explorations on various topics.</p>

  {blogs.length > 0 ? (
    <ul class="post-list">
      {blogs.map((post) => (
        <li class="post-item">
          <h3><a href={`/blogs/${post.slug}`}>{post.data.title}</a></h3>
          <p class="post-meta">
            {post.data.date.toLocaleDateString('en-US', { 
              year: 'numeric', 
              month: 'long', 
              day: 'numeric' 
            })}
          </p>
          <p class="post-excerpt">{post.data.description}</p>
        </li>
      ))}
    </ul>
  ) : (
    <p class="empty-state">No blog posts yet. Check back soon!</p>
  )}
</BaseLayout>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = (await getCollection('projects'))
  .filter(p => !p.data.draft)
  .sort((a, b) => (a.data.order ?? 0) - (b.data.order ?? 0));
---

<BaseLayout title="Projects" description="Data engineering projects — pipelines, platforms, and systems I've built.">
  <h1>Projects</h1>
  <p>Systems I've designed and built. Focused on data pipelines, platform engineering, and data quality.</p>

  {projects.length > 0 ? (
    <div class="projects-grid">
      {projects.map((project) => (
        <div class="project-card">
          <h3>{project.data.title}</h3>
          <p class="project-description">{project.data.description}</p>
          <div class="tech-tags">
            {project.data.tech.map((t) => (
              <span class="tech-tag">{t}</span>
            ))}
          </div>
          <div class="project-links">
            {project.data.github && (
              <a href={project.data.github} target="_blank" rel="noopener noreferrer" class="project-link">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
                View Source
              </a>
            )}
            {project.data.live && (
              <a href={project.data.live} target="_blank" rel="noopener noreferrer" class="project-link">
                Live Demo →
              </a>
            )}
          </div>
        </div>
      ))}
    </div>
  ) : (
    <p class="empty-state">Projects coming soon.</p>
  )}
</BaseLayout>
